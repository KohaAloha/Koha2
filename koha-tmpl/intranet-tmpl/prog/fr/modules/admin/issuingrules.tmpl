                                <td class="highlight">
                            <!-- TMPL_ELSE -->
                                <td>
                            <!-- /TMPL_IF -->
                                <input name="<!-- TMPL_VAR NAME="issuingname" -->" value="<!-- TMPL_VAR NAME="issuingvalue" -->" size="6" maxlength="10" />
                            </td>
                        <!-- /TMPL_LOOP -->
                    </tr>
                <!-- /TMPL_LOOP -->
            </table>
            <input type="submit" value="Valider les modifications">
        </form>


                            <td><!-- TMPL_VAR NAME="number" --></td>
                            <td><!-- TMPL_VAR NAME="newdate" --></td>
                            <td><!-- TMPL_VAR NAME="expirationdate" --></td>
                            <td><!-- TMPL_VAR NAME="title" --></td>
                            <!-- TMPL_IF NAME="hasexpirated" -->
                            <td class="hasexpirated">
                            <!-- TMPL_ELSE -->
                            <td>
                            <!-- /TMPL_IF -->
                                <!-- TMPL_VAR NAME="new" -->
                            </td>
                            <td>
                                <a href="/cgi-bin/koha/tools/koha-news.pl?op=add_form&id=<!-- TMPL_VAR NAME="idnew" -->">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    <!-- /TMPL_LOOP -->
                </table>
                <input type="hidden" name="op" value="del" />
                <input type="submit" class="button" value="Supprimer la sélection">
            </form>
        <!-- TMPL_ELSE -->
            <p>Pas de nouvelles enregistrées</p>

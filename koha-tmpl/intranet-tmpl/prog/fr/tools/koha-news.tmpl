                    <!-- /TMPL_IF -->
                        <!-- TMPL_VAR name="language" -->
                    </option>
                <!-- /TMPL_LOOP" -->
            </select>
            </p>
            <p>
                <label for="title">Titre</label>
                <input id="title" size="30" type="text" name="title" value="<!-- TMPL_VAR NAME="title" -->" />

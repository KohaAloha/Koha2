                    Calendar.setup(
                    {
                        inputField : "expirationdate",
                        ifFormat : "%Y-%m-%d",
                    }
                    );
                </script>
            </p>
            <p>
                <label for="number">S'affiche en position </label>
                <!-- TMPL_IF NAME="number"-->
                    <input id="number" size="3" name="number" type="text" checked="1" />
                <!-- TMPL_ELSE -->
                    <input id="number" size="3" name="number" type="text" />
                <!-- /TMPL_IF -->
            </p>
            <p>Nouvelles</p>
            <textarea name="new" cols="75" rows="10"><!-- TMPL_VAR NAME="new" --></textarea>
            <p>
                <input class="button" type="submit" value="Valider">
                <input class="button" type="button" value="Annuler" onclick="window.location.href='/cgi-bin/koha/tools/opac-news.pl'">
            </p>
        </form>
    <!-- TMPL_ELSE -->
        <div id="koha-news_filter">

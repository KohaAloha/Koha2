		if (f.bookfundid.value.length==0) {
			_alertString += "- bookfundid missing\n";
		}
		if (f.bookfundname.value.length==0) {
			_alertString += "- bookfundname missing\n";
		}
		if (_alertString.length==0) {
			document.Aform.submit();

        </td>
      </tr>
      <tr>
        <th>
          <label for="value_mainmainentry">Vedette principale (seulement $a)</label>
          <input type="hidden" name="marclist" value="mainmainentry">
        </th>
        <td>
          <select name="operator">
	    <option value="contains">contient</option>
	    <option value="start">commence par</option>
            <option value="is">est exactement</option>
	  </select>
        </td>
        <td>
          <input id="value_mainmainentry" type="text" name="value" value="<!-- TMPL_VAR NAME="value" -->">
        </td>
      </tr>
      <tr>
        <th>
          <label for="value_mainentry">Vedette principale</label>
          <input type="hidden" name="marclist" value="mainentry">
          <input type="hidden" name="and_or" value="and">
          <input type="hidden" name="excluding" value="">
        </th>
        <td>
          <select name="operator">
	    <option value="contains">contient</option>
	    <option value="start">commence par</option>
            <option value="is">est exactement</option>
	  </select>
        </td>
        <td>
          <input id="value_mainentry" type="text" name="value" value="<!-- TMPL_VAR NAME="value" -->">
        </td>
      </tr>

      <tr>
        <th>
          <label for="value_anywhere">Partout</label>
          <input type="hidden" name="marclist" value="">
          <input type="hidden" name="and_or" value="and">
          <input type="hidden" name="excluding" value="">
        </th>
        <td>
          <select name="operator">
            <option value="contains">contient</option>
            <option value="start">commence par</option>
            <option value="is">est exactement</option>
          </select>
        </td>
        <td>
          <input id="value_anywhere" type="text" name="value" value="<!-- TMPL_VAR NAME="value" -->">
        </td>
      </tr>
    </table>
    
    <div id="action">
          Trié par :<select name="orderby">
         <option value="">Aucun</option>
	    <option value="HeadingAsc">Vedette croissant</option>
	    <option value="HeadingDsc">Vedette décroissant</option>
	  </select>
      <input type="submit" value="Rechercher">
    </div>
  </form>
</fieldset>
    

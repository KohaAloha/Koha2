			<font color=black>
			<b>Todays Issues</b></font>
		</th>
	</tr>
	<tr>
		<th>Due Date</th><th>Bar Code</th><th>Title</th><th>Author</th><th>Class</th>
	</tr>
	<TMPL_LOOP name="todayissues">
	    <tr><td bgcolor=<TMPL_VAR NAME="tcolor"> align=center><TMPL_VAR NAME="dd"></td>

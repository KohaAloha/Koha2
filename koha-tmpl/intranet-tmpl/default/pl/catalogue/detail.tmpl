			<TMPL_IF name="publicationyear"><b>w </b></TMPL_IF><TMPL_VAR NAME="publicationyear">
			<TMPL_IF name="pages">, </TMPL_IF><TMPL_VAR name="pages">
			<TMPL_IF name="size">, </TMPL_IF><TMPL_VAR name="size"><br/>
			<TMPL_IF name="collection"><b>Kolekcja:</b></TMPL_IF> <TMPL_VAR NAME="seriestitle"><br/>
			<TMPL_IF name="subject"><b>Has³o przedm:</b></TMPL_IF> <TMPL_VAR NAME="subject"><br/>
			<TMPL_IF name="copyrightdate"><b>Rok:</b></TMPL_IF> <TMPL_VAR NAME="copyrightdate"><br/>

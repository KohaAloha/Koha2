<script>
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
function isNotNull(f,noalert) {
	if (f.value.length ==0) {
		return false;
	}
	return true;
}
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
function toUC(f) {
	var x=f.value.toUpperCase();
	f.value=x;
	return true;
}
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
function isNum(v,maybenull) {
var n = new Number(v.value);
if (isNaN(n)) {
	return false;
	}
if (maybenull==0 && v.value=='') {
	return false;
}
return true;
}
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
function isDate(f) {
	var t = Date.parse(f.value);
	if (isNaN(t)) {
		return false;
	}
}
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
function Check(f) {
	var ok=1;
	var _alertString="";
	var alertString2;
	if (f.itemtype.value.length==0) {
		_alertString += "- Itemtype absent\n";
	}
	if (!(isNotNull(window.document.Aform.description,1))) {
		_alertString += "- Description absente\n";
	}
	if ((!isNum(f.loanlength,0)) && f.loanlength.value.length > 0) {
		_alertString += "- Durée de prêt n'est pas un nombre\n";
	}
	if ((!isNum(f.rentalcharge,0)) && f.rentalcharge.value.length > 0) {
		_alertString += "- Cout du prêt n'est pas un nombre\n";
	}
	if (_alertString.length==0) {
		document.Aform.submit();
	} else {
		alertString2 = "Le formulaire n'est pas validé pour les raisons suivantes\n";
		alertString2 += "------------------------------------------------------------------------------------\n\n";
		alertString2 += _alertString;
		alert(alertString2);
	}
}
</SCRIPT>
<TMPL_IF name="add_form">
